<p><%= link_to "back to home", lists_path, class: "btn btn-primary" %></p>

<p><%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<p><strong><%= @list.name %></strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><h2><%= bookmark.movie.title %></h2><%= bookmark.comment %><p><%= link_to "delete movie", bookmark_path(bookmark), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p></li>
  <% end %>
</ul>
<br>
